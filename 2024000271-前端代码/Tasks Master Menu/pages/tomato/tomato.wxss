/* 页面背景和整体布局样式 */
page {

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
   /* 纯白背景 */
 /*background-color: #FFFFFF;*/
 /* 纯白背景 */
}

/* 顶部图片控制 */  
.background-image {  
  width: 100%; /* 宽度100% */  
  height: 100vh; /* 高度视口高度 */  
  position: fixed; /* 固定定位 */  
  z-index: -1; /* 确保在内容之下 */  
}  
  
.content {  
  position: relative; /* 相对于背景图片定位内容 */  
  z-index: 1; /* 确保在背景图片之上 */  
}

/* 输入框样式 */
.input-time {
  width: 280px;
  height: 40px;
  border: 2px solid #4CAF50; /* 绿色边框 */
  border-radius: 20px;
  padding: 5px 10px;
  font-size: 16px;
  margin-bottom: 20px;
  text-align: center;
  outline: none;
}

