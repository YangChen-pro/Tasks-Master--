.timer {  
  font-size: 48px;  
  color: #333333;  
  margin-bottom: 30px;  
  font-weight: bold;  
}
/* 按钮通用样式 */
button {
  width: 120px;
  height: 40px;
  border-radius: 20px;
  background-color: #4CAF50; /* 绿色背景 */
  color: white;
  font-size: 16px;
  margin: 10px;
  border: none;
  transition: background-color 0.3s, transform 0.2s;
}

/* 按钮悬浮效果 */
button:hover {
  background-color: #45A049; /* 深绿色 */
  transform: translateY(-2px);
}

